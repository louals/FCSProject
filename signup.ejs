<div class="text-center center-div" id="signup" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
    <div class="container w-50 border rounded shadow-lg py-5" style="background-color: #ffffff; max-width: 400px;">
        <div class="title pb-4">
            <h2 class="font-weight-bold" style="color: #343a40;">Sign Up</h2>
            <span style="color: #6c757d;">Create a new account</span>
        </div>
        <form action="/signup" method="POST" class="pt-4">
            <div class="form-group">
                <input type="email" class="form-control rounded-pill px-4" placeholder="Name" name="name" style="border: 1px solid #ced4da; height: 45px;">
           <br>
            </div>

            <div class="form-group">
                <input type="password" class="form-control rounded-pill px-4" placeholder="Password" name="password" style="border: 1px solid #ced4da; height: 45px;">
            </div>

            <button type="submit" class="btn btn-success rounded-pill w-100 py-2 mt-5" style="background-color: #28a745;">Sign up</button>
        </form>

        <div class="pt-4 text-center">
            <span style="color: #6c757d;">Already have an account?</span>
            <a href="/login" class="font-weight-bold" style="color: #007bff; text-decoration: none;">Log in</a>
        </div>
    </div>
</div>

