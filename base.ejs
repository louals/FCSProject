<div class="text-center center-div" id="login" style="min-height: 100vh; display: flex; align-items: center; justify-content: center; background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
    <div class="container w-50 border rounded shadow-lg py-5" style="background-color: #ffffff; max-width: 400px;">
        <div class="title pb-4">
            <h2 class="font-weight-bold" style="color: #343a40;">Login</h2>
            <span style="color: #6c757d;">Log in for existing users</span>
        </div>
        <form action="/login" method="POST" class="pt-4">
            <div class="form-group">
                <input type="text" class="form-control rounded-pill px-4" placeholder="Email" name="name" style="border: 1px solid #ced4da; height: 45px;">
                <small class="form-text text-muted text-left pl-2">Enter your registered email address</small>
            </div>

            <div class="form-group">
                <input type="password" class="form-control rounded-pill px-4" placeholder="Password" name="password" style="border: 1px solid #ced4da; height: 45px;">
            </div>

            <button type="submit" class="btn btn-primary rounded-pill w-100 py-2 mt-5" style="background-color: #007bff; border-color: #007bff;">Log in</button>
        </form>

        <div class="pt-4 text-center">
            <span style="color: #6c757d;">Don't have an account?</span>
            <a href="/signup" class="font-weight-bold" style="color: #007bff; text-decoration: none;">Sign up</a>
        </div>
    </div>
</div>

